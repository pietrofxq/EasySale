<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="easysale.model.Cliente" table="CLIENTES">
		<id name="id" column="ID">
			<generator class="native"/>
		</id>
		<property name="nome" column="NOME" type="string"/>
		<property name="cpf" column="CPF" type="string"/>
		<list name="compras" cascade="all" table="COMPRAS_LIST">
			<key column="CLIENTE_ID" />
			<index column="COMPRAS_INDEX" />
			<one-to-many class="easysale.model.Compra"/>
		</list>
	</class>
</hibernate-mapping>